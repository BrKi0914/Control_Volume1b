def T2H(T, Cpave):
    
# Converts temperature to enthalpy.

# The specific heat is allowed to be temperature dependent
# The reference temperature is assumed to be O C.
    
    Tref = 0
    H = Cpave * (T - Tref)

    return H

#--------------------------------------------------example

# the dummy arrays are created to test the H fuction

# import libraries
import numpy as np

T = 25.0
Cpave = np.array([0.5, 0.8,0.9,1.0])
T2H(T,Cpave)
